##### VARIABLES #####
NAME := libft.a
CC := gcc
CFLAGS := -Wall -Wextra -Werror
LIB_DIR := ./Libft
LIB_NAME := ft
LIB := $(LIB_DIR)lib$(LIB_NAME).a
INCLUDE := -I $(LIB_DIR)
AR := ar
ARFLAGS := rcs
RM := rm -f
CP := cp

##### SRC #####
SRC_DIR := ./src
SRC_FILE :=	ft_isalpha.c \
			ft_isdigit.c \
			ft_isascii.c \
			ft_isalnum.c \
			ft_isprint.c \
			ft_strlen.c \
			ft_memset.c \
			ft_bzero.c \
			ft_memcpy.c \
			ft_memmove.c \
			ft_strlcpy.c \
			ft_strlcat.c \
			ft_toupper.c \
			ft_tolower.c \
			ft_strchr.c \
			ft_strrchr.c \
			ft_strncmpt.c \
			ft_memcmp.c \
			ft_strnstr.c \
			ft_atoi.c \
			ft_calloc.c \
			ft_strdup.c

MAIN_SRCS := $(addprefix $(MAIN_SRC_DIR),$(MAIN_SRC_FILES))

##### BONUS VARIABLES #####

##### OBJ #####
OBJ_DIR := obj
OBJ_FILE :=	$(SRC_FILE:.c=.o)
#BONUS_OBJ_FILE := $(BONUS_SRC_FILE:.c=.o)

OBJS := $(addprefix $(OBJ_DIR)/,$(OBJ_FILE))
#BONUS_OBJS := $(addprefix $(OBJ_DIR),$(BONUS_OBJ_FILE))

##### RULES #####
all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "Compiled! -> $(GREEN)$(NAME)$(NC)"

re: fclean all

clean: 


fclean: clean


.PHONY: all clean fclean re